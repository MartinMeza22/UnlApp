# Configura MySQL para usar autenticaci贸n legacy y permitir conexiones externas
ENV MYSQL_ROOT_HOST=%

# Copia cualquier script SQL que desees ejecutar en la inicializaci贸n
#COPY ./init.sql /docker-entrypoint-initdb.d/

# Expone el puerto 3306
